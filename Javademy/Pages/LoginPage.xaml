<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Javademy.Pages.LoginPage"
             Title="Login"
             BackgroundColor="#FAFAFA">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Login" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#333" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" FontSize="18" BackgroundColor="#E5E5E5" TextColor="#333" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" FontSize="18" BackgroundColor="#E5E5E5" TextColor="#333" />

        <Button Text="Login" BackgroundColor="#4A90E2" TextColor="White" FontAttributes="Bold" CornerRadius="25" Padding="15,10" Clicked="OnLoginClicked" />
    </VerticalStackLayout>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E5E5E5" Offset="0.0" />
            <GradientStop Color="#FAFAFA" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
</ContentPage>
